{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: build",
			"command": "/root/.local/bin/xmake",
			"args": [
				"build",
				"--root",
				"--verbose"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"PATH": "/data/server/compiler/bin:${env:PATH}"
				},
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /data/server/compiler/bin/g++"
		}
	]
}
